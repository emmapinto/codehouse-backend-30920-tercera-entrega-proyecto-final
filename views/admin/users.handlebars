<div class="container mx">
  <h2>Usuarios</h2>
    <div class="d-grid gap-2 col-6 mx-auto">
      <a href="/admin/addUser" class="btn btn-outline-dark" type="button">Agregar usuario</a>
    </div>
      <table class="table table-sm table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Usuario</th>
                <th scope="col">Avatar</th>
                <th scope="col">Mail</th>
                <th scope="col">Telefono</th>
            </tr>
        </thead>
        <tbody class="">
            {{#each users}}
            <tr>
              <td>{{this.firstName}}</td>
              <td>{{this.lastName}}</td>
              <td>{{this.userName}}</td>
              <td>{{this.avatar}}</td>
              <td>{{this.email}}</td>
              <td>{{this.phone}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
  <div class="d-grid gap-2 col-6 mx-auto">
    <a href="/admin" class="btn btn-dark" type="button">Atras</a>
  </div>
</div>